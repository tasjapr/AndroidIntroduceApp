<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/authorization_view"
        android:layout_width="166dp"
        android:layout_height="35dp"
        android:text="@string/authorization"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="@string/enter_phone_text"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authorization_view" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#BFEDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/phone_view"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />

    <TextView
        android:id="@+id/wrong_mobile_view"
        android:layout_width="309dp"
        android:layout_height="47dp"
        android:text="@string/wrong_mobile_phone"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/phone_view"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view" />

    <TextView
        android:id="@+id/get_code"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:background="@color/orange"
        android:text="@string/get_code"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/wrong_mobile_view"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>
